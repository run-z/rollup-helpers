{
  "name": "@run-z/rollup-helpers",
  "version": "1.0.0",
  "description": "Rollup helpers",
  "homepage": "https://github.com/run-z/rollup-helpers",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:run-z/rollup-helpers.git"
  },
  "license": "MIT",
  "author": "Ruslan Lopatin <ruslan.lopatin@gmail.com>",
  "bugs": {
    "url": "https://github.com/run-z/rollup-helpers/issues"
  },
  "type": "module",
  "main": "./dist/rollup-helpers.cjs",
  "module": "./dist/rollup-helpers.js",
  "types": "./index.d.ts",
  "exports": {
    "import": "./dist/rollup-helpers.js",
    "require": "./dist/rollup-helpers.cjs"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@run-z/eslint-config": "^1.2.1",
    "@types/node": "^12.20.4",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "eslint": "^7.20.0",
    "eslint-plugin-jest": "^24.1.5",
    "gh-pages": "^3.1.0",
    "rollup": "^2.39.1",
    "rollup-plugin-flat-dts": "^1.0.1",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-typescript2": "^0.30.0",
    "run-z": "=1.6.1-bootstrap",
    "shx": "^0.3.3",
    "tslib": "^2.1.0",
    "typedoc": "^0.20.28",
    "typescript": "^4.2.2"
  },
  "scripts": {
    "all": "run-z +z build,lint",
    "bootstrap": "rollup --config ./rollup.config.js",
    "build": "run-z +z bootstrap",
    "ci:all": "run-z +z all",
    "clean": "run-z +z --then shx rm -rf index.d.ts dist target",
    "doc": "run-z +z --then typedoc",
    "doc:publish": "run-z doc --then gh-pages --dist target/typedoc --dotfiles",
    "lint": "run-z +z --then eslint . --ext .js,.ts",
    "test": "run-z",
    "z": "run-z +build,+lint"
  }
}
